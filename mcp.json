{
  "name": "coroot-mcp",
  "version": "0.2.0",
  "description": "Community MCP server that exposes Coroot root-cause analysis and incident context as tools for assistants (not an official Coroot product).",
  "license": "MIT",
  "homepageUrl": "https://github.com/Meritocra/coroot-mcp",
  "environment": {
    "secrets": [
      "OPENAI_API_KEY",
      "COROOT_API_KEY",
      "MCP_AUTH_TOKEN"
    ],
    "vars": [
      "OPENAI_MODEL",
      "COROOT_API_URL",
      "COROOT_DEFAULT_PROJECT_ID"
    ]
  },
  "capabilities": {
    "tools": {
      "listChanged": true
    },
    "resources": {}
  },
  "servers": [
    {
      "transport": {
        "type": "http",
        "url": "http://localhost:8080/mcp"
      }
    }
  ]
}
